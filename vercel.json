{
    "version": 2,
    "buildCommand": "yarn turbo run build",
    "builds": [
        {
            "src": "packages/database/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "packages/nest-js/package.json",
            "use": "@vercel/node"
        },
        {
            "src": "apps/microservices/auth/src/main.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "apps/microservices/auth/src/main.ts"
        },
        {
            "src": "/(.*)",
            "dest": "apps/frontend/$1"
        }
    ]
}