{
    "version": 2,
    "buildCommand": "cd packages/configs && yarn install && cd ../database && yarn install && yarn build && cd ../nest-js && yarn install && yarn build && cd ../../apps/microservices/auth && yarn install && yarn build",
    "outputDirectory": "apps/microservices/auth/dist",
    "builds": [
        {
            "src": "apps/microservices/auth/dist/**/*.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/microservices/auth/dist/**/*",
                    "packages/database/dist/**/*",
                    "packages/nest-js/dist/**/*",
                    "packages/configs/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "apps/microservices/auth/src/main.ts"
        }
    ]
}