{
    "version": 2,
    "builds": [
        {
            "src": "apps/microservices/auth/src/main.ts",
            "use": "@vercel/node",
            "config": {
                "buildCommand": "cd ../../packages/database && yarn install && yarn build && cd ../nest-js && yarn install && yarn build && cd ../../apps/microservices/auth && yarn install && yarn build",
                "includeFiles": [
                    "apps/microservices/auth/**/*",
                    "packages/database/**/*",
                    "packages/nest-js/**/*",
                    "packages/configs/**/*"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "apps/microservices/auth/src/main.ts"
        }
    ]
}