{
    "version": 2,
    "buildCommand": "yarn install && yarn workspace @repo/db build && yarn workspace @repo/nest-js build && yarn workspace auth build",
    "builds": [
        {
            "src": "apps/microservices/auth/dist/main.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "apps/microservices/auth/dist/**",
                    "packages/database/dist/**",
                    "packages/nest-js/dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/auth/(.*)",
            "dest": "apps/microservices/auth/src/main.ts"
        }
    ]
}